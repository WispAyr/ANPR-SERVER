<%- contentFor('body') %>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Car Parks</h1>
        <a href="/admin/car-parks/new" class="btn btn-primary">Add New Car Park</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Max Capacity</th>
                    <th>Current Occupancy</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% carParks.forEach(function(carPark) { %>
                    <tr>
                        <td><%= carPark.name %></td>
                        <td><%= carPark.location %></td>
                        <td><%= carPark.max_capacity %></td>
                        <td>
                            <span class="badge bg-info">Coming Soon</span>
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="/admin/car-parks/<%= carPark.id %>/edit" 
                                   class="btn btn-sm btn-outline-secondary">Edit</a>
                                <form action="/admin/car-parks/<%= carPark.id %>?_method=DELETE" 
                                      method="POST" 
                                      class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this car park?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div> 